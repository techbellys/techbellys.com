#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Ensure tmp dirs exist and are writable
mkdir -p tmp/pids tmp/cache log storage
chmod -R 755 tmp log storage

# Only run DB setup when launching the Rails server
if [ "$1" = "./bin/rails" ] && [ "$2" = "server" ]; then
  echo "=> Preparing database..."
  ./bin/rails db:prepare RAILS_ENV=production || ./bin/rails db:create RAILS_ENV=production
fi

exec "$@"
