#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
  LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
  export LD_PRELOAD
fi

# Ensure tmp/pids directory exists and is owned
mkdir -p tmp/pids
chown -R "$(id -u):$(id -g)" tmp/pids

# Clean up stale PID file to avoid server startup error
if [ -f tmp/pids/server.pid ]; then
  echo "Removing stale server PID file..."
  rm -f tmp/pids/server.pid || echo "Warning: failed to remove tmp/pids/server.pid"
fi

# If running the Rails server, prepare the DB
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
fi

exec "$@"
